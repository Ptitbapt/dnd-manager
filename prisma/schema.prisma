generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../db_DMG.db"
}

model ITEMS {
  Index              Int     @id @default(autoincrement())
  NomObjet           String?
  Type               String?
  SousType           String?
  Maitrise           String?
  Rarete             String?
  Caracteristiques   String?
  Valeur             String?
  InfoSupplementaire String?
  Poids              String?
  Source             String?

  @@map("ITEMS")
}

model Shop {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  items       String
  createdAt   DateTime @default(now())

  @@map("Shop")
}

model ShopPreset {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  wealthLevel String   // "pauvre", "standard", "luxueux"
  shopType    String   // "armurier", "magicien", "alchimiste", etc.
  typeChances String   // JSON string des pourcentages par type
  rarityConfig String  // JSON string de la configuration des raret√©s
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("ShopPreset")
}