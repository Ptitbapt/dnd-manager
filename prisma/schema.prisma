// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ShopPreset {
  id           Int      @id @default(autoincrement())
  name         String
  description  String?
  wealthlevel  String   @map("wealthlevel")    // Changé !
  shoptype     String   @map("shoptype")      // Changé !
  typechances  String   @map("typechances")   // Changé !
  rarityconfig String   @map("rarityconfig")  // Changé !
  isdefault    Boolean  @default(false) @map("isdefault")  // Changé !
  createdat    DateTime @default(now()) @map("createdat")  // Changé !
  updatedat    DateTime @updatedAt @map("updatedat")       // Changé !

  @@map("shoppreset")
}

model Items {
  index               Int     @id @default(autoincrement())
  nomobjet           String? @map("nomobjet")           // Changé !
  type               String?
  soustype           String? @map("soustype")           // Changé !
  maitrise           String?
  rarete             String?
  caracteristiques   String?
  valeur             String?
  infosupplementaire String? @map("infosupplementaire") // Changé !
  poids              String?
  source             String?

  @@map("items")
}

model Shop {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  items       String   // JSON en tant que String
  createdat   DateTime @default(now()) @map("createdat") // Changé !

  @@map("shop")
}